# QuickBooks Online API Configuration
QBO_CLIENT_ID=your_client_id_here
QBO_CLIENT_SECRET=your_client_secret_here
QBO_REDIRECT_URI=http://localhost:8000/callback
QBO_ENVIRONMENT=sandbox

# Company/Realm ID (obtained after OAuth)
QBO_COMPANY_ID=

# AI API Keys (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ===== AUTOTASK API CONFIGURATION =====
# Read-only API user credentials for ROC board ticket reporting
AUTOTASK_USERNAME=api-readonly@totalcareit.com
AUTOTASK_SECRET=your_autotask_api_secret_here
AUTOTASK_INTEGRATION_CODE=your_integration_code_here

# ROC Board Queue ID - Find this in Autotask:
# Admin > Service Desk > Queues > Select ROC Board > Note the Queue ID
AUTOTASK_ROC_BOARD_ID=

# ===== HUBSPOT API CONFIGURATION =====
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_HUB_ID=8752461

# ===== API SERVER CONFIGURATION =====
PORT=8000
ALLOWED_ORIGINS=https://totalcareit.ai,http://localhost:3000
ENVIRONMENT=development
