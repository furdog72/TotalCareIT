# Backend API Configuration
PORT=8000
ALLOWED_ORIGINS=https://totalcareit.ai,http://localhost:3000

# HubSpot API Configuration
# Get your access token from: https://app.hubspot.com/settings/integrations/private-apps
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here

# Autotask PSA Configuration
AUTOTASK_API_INTEGRATION_CODE=your_integration_code
AUTOTASK_USERNAME=your_username
AUTOTASK_SECRET=your_api_secret
AUTOTASK_BASE_URL=https://webservices.autotask.net/ATServicesRest

# Autotask Queue IDs (optional)
AUTOTASK_ROC_QUEUE_ID=
AUTOTASK_PRO_SERVICES_QUEUE_ID=
AUTOTASK_TAM_QUEUE_ID=
AUTOTASK_SALES_QUEUE_ID=

# Datto Commerce API Configuration
# Get from: https://portal.datto.com/
DATTO_COMMERCE_API_KEY=your_datto_commerce_api_key
DATTO_COMMERCE_API_SECRET=your_datto_commerce_api_secret
DATTO_COMMERCE_BASE_URL=https://api.datto.com/v1

# Datto RMM API Configuration
# Get from: https://rmm.datto.com/ → Settings → API
DATTO_RMM_API_KEY=your_datto_rmm_api_key
DATTO_RMM_API_SECRET=your_datto_rmm_api_secret
DATTO_RMM_REGION=us

# ConnectWise Manage API Configuration
# Get from: ConnectWise Manage → System → Members → API Members
CONNECTWISE_COMPANY_ID=your_company_id
CONNECTWISE_PUBLIC_KEY=your_public_key
CONNECTWISE_PRIVATE_KEY=your_private_key
CONNECTWISE_CLIENT_ID=your_client_id
CONNECTWISE_BASE_URL=https://api-na.myconnectwise.net

# Microsoft 365 API Configuration
# Create app in: https://portal.azure.com/ → Azure Active Directory → App registrations
M365_TENANT_ID=your_tenant_id
M365_CLIENT_ID=your_client_id
M365_CLIENT_SECRET=your_client_secret
